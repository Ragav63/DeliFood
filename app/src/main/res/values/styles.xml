<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize background color -->
        <item name="android:background">@drawable/topcurve_whitebg</item>
    </style>

    <style name="CustomAlertDialogTopcurve" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize background color -->
        <item name="android:background">@drawable/topcirclecurve_whitebg</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <!-- Customize button text color -->
        <item name="android:textColor">@color/white</item>
        <!-- Customize button background color -->
        <item name="android:backgroundTint">@color/white</item>
    </style>
    
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_botttom</item>
    </style>
</resources>