<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with corner radius and green border -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/iconColor"/>
            <solid android:color="@android:color/transparent" />
            <corners android:radius="20dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>

    <!-- Search drawable -->
    <item
        android:drawable="@drawable/searchblack64px"
        android:gravity="center"
        android:left="30dp"
        android:top="30dp"
        android:right="30dp"
        android:bottom="30dp"/>
</layer-list>